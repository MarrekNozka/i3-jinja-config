{%- if hostname == 'surikata' %}
  set $primary DVI-I-1
  set $secondary VGA-1

  set $STATUS_FONT pango:Terminus 15
  set $STATUS_CONFFILE ~/.i3/i3blocks_bar.conf
{%- elif hostname == 'pio' %}
  set $primary eDP-1
  set $secondary HDMI-1

  set $STATUS_FONT pango:Terminus 20
  set $STATUS_CONFFILE ~/.i3/i3blocks_foo.conf
{%- endif %}

#set $terminal sakura -f 'Terminus 14'
set $terminal urxvtcd

# i3 config file (v4)
